<form action="/api/products" method="POST" id="add_product">
    <div class="new_product text-center">
        <div class="form-group">
            <label for="nomeProduto" class="text-light">Nome Produto</label>
            <input type="hidden" name="id" value="">
            <input type="text" name="nomeProduto" value="" placeholder="Nome do produto">
        </div>
        <div class="form-group">
            <label for="tipoProduto" class="text-light">Tipo </label>
            <input type="text" name="tipoProduto" value="" placeholder="Tipo do produto">
        </div>
        <div class="form-group">
            <label for="categoriaProduto" class="text-light">Categoria</label>
            <input type="text" name="categoriaProduto" value="" placeholder="Categoria do produto">
        </div>
        <div class="form-group">
            <label for="precoProduto" class="text-light">Preço</label>
            <input type="number" name="precoProduto" value="" placeholder="Preço do produto">
        </div>

        <div class="form-group text-center">
            <button type="submit" class="btn text-dark update">Cadastrar</button>
        </div>

    </div>
    
</form>