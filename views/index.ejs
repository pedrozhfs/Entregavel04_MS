<!-- include header -->
<%- include('include/_header') %>

<main id="site-main">
    <div class="container">
        <div class="text-center">
            <a href="/add-product" class="border-shadow">
                <span class="text-gradient">Novo Produto <i class="fa-brands fa-product-hunt"></i></span>
            </a>
            <a href="/list-email" class="border-shadow">
                <span class="text-gradient">Emails Enviados <i class="fa-solid fa-envelope"></i></span>
            </a>
        </div>

        <form action="/" method="POST">
            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th>ID</th>
                        <th>Produto</th>
                        <th>Tipo Produto</th>
                        <th>Categoria</th>
                        <th>Preço</th>
                        <th>Ações</th>
                    </tr>
                </thead>
                <tbody>
                    <%- include('include/_show')%>
                </tbody>
            </table>
        </form>
    </div>
</main>

<!-- include footer -->
<%- include('include/_footer') %>
