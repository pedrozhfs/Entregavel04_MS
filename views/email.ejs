                <span class="text-gradient"><i class="fa-solid fa-arrow-left"></i> Voltar</span>
            </a>
        </div>
        <div class="searchInput">
            <input type="text" name="search" id="search" placeholder="FILTRE PELA DATA"/> 
        </div>
        

        <form action="/" method="POST">
            <table class="table" id="myTable">
                <thead class="thead-dark">
                    <tr class="header">
                        <th>Data Enviada</th>
                        <th>ID</th>
                        <th>Remetente</th>
                        <th>Destinat√°rio</th>
